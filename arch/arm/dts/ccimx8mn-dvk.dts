				MX8MN_IOMUXC_I2C2_SDA_GPIO5_IO17        	0x1c3
			>;
		};

		pinctrl_i2c3_gpio: i2c3grp-gpio {
			fsl,pins = <
				MX8MN_IOMUXC_I2C3_SCL_GPIO5_IO18        		0x1c3
				MX8MN_IOMUXC_I2C3_SDA_GPIO5_IO19        	0x1c3
			>;
